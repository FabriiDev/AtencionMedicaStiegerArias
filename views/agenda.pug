//- pag2.pug
extends layout
block head 
    
    link(rel="stylesheet", href="/styles/agenda.css")
    //- estilos de alertas
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css")
    //- estilos del para el quill
    link(href="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.snow.css" rel="stylesheet")
    link(rel="stylesheet", href="/styles/general.css")
block header 
    include templates/header.pug
block content
    .conteiner.cont-todo.width-90
        .title.text-center.mt-5 
            .bg-bienvenido.p-3
                h1.color-primario-txt.fw-bold Â¡Bienvenido #{nombre}!
                .d-flex.gap-3.justify-content-center.p-3
                    button.btn.btn-HCE-invertido#btn-template.color-primario-txt.fw-semibold Crear Template
                    button.btn.btn-HCE#btn-template-editar.fw-semibold Editar Template
                .conteiner.rounded.p-2
                    .d-flex.justify-content-center.gap-3.align-items-start
                        .d-flex.align-items-end.gap-3.titulos-tur.text-light
                            p.color-primario-txt.mb-0 Elegir fecha 
                            input(type="date")#fecha

                    //- ------------- MODAL PARA EL CREAR TEMPLATE --------------
            #modal.modal 
                .modal-content.fw-normal.d-flex.flex-column.gap-3
                    span.close#close &times;
                    p.text-center.fw-semibold Crea tu template
                    label Nombre Template: 
                    input(type="text")#nombre-template
                    label Template: 
                    div#editor
                    button.btn.btn-success.mt-4#guardar-template Enviar
            
            //- ------------- MODAL PARA EL EDITAR TEMPLATE --------------
            #modal-editar.modal
                .modal-content.fw-normal.d-flex.flex-column.gap-3
                    span.close#close-editar &times;
                    p.text-center.fw-semibold Edita tu Template
                    label Selecciona template 
                    select#nombres-templates-editar
                        option(value="" selected) Seleccione uno 
                    label Nuevo nombre del Template:
                    input(type="text" disabled)#nombre-template-editar
                    label Template:
                    div(disabled)#editor-editar
                    button(disabled).btn.btn-danger.mt-4#eliminar-template-editar Eliminar
                    button(disabled).btn.btn-success#guardar-template-editar Editar

            .text-center.text-light.fs-4.color-primario-bg.fw-semibold.p-3.border-bottom.border-light Agenda Diaria
            .table-responsive
                table.table.table-striped.sombra-tabla.color-primario-txt.fs-5.fw-semibold
                    thead.table-info
                        tr
                            th Paciente
                            th Hora
                            th Motivo
                            th Estado
                            th Arribado 
                            th Especialidad 
                            th Acciones
                    tbody#pintarTablaTurnos
                        //- SEGUN ESTADO PINTAR, ROJO CANCELADO, VERDE ATENDIDO


    script(src="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.min.js")  
    script(src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js") 
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="/js/agendaCliente.js")  

block footer 
    include templates/footer.pug
